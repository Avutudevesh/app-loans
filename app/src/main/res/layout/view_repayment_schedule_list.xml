<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <com.example.app_loans.components.FieldView
        android:id="@+id/repayment_date_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:field_label="Date"
        tools:field_value="2nd April 2020" />

    <com.example.app_loans.components.FieldView
        android:id="@+id/repayment_amount_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        tools:field_label="Amount"
        tools:field_value="Rs 1000" />

</LinearLayout>

