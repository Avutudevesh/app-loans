<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/repayment_schedule"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">


    <com.example.app_loans.components.FieldView
        android:id="@+id/repayment_date_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:field_label="Date"
        tools:field_value="2nd April 2020" />

    <com.example.app_loans.components.FieldView
        android:id="@+id/repayment_amount_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        tools:field_label="Amount"
        tools:field_value="Rs 1000"
        android:layout_marginBottom="8dp"/>

</RelativeLayout>

