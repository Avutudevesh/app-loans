<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="24dp"
        android:text="Applicant Details" />

    <com.example.app_loans.components.FieldView
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:field_label="Name"
        tools:field_value="Devesh" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <com.example.app_loans.components.FieldView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:field_label="Date of Birth"
            tools:field_value="14th May 1997" />

        <com.example.app_loans.components.FieldView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            tools:field_label="Phone number"
            tools:field_value="7022209295" />

    </LinearLayout>

</LinearLayout>